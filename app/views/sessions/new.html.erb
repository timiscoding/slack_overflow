

<h1>Login</h1>
<%= form_tag login_path, :method => :post, :class => "form-horizontal user" do %>
  <div class="form-group">
    <%= label_tag :email, nil, :class => "col-lg-2" %>
    <div class="col-lg-10">
      <%= text_field_tag(:email, nil, :required => true, :class => 'form-control') %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, nil, :class => "col-lg-2" %>
    <div class="col-lg-10">
      <%= password_field_tag(:password, nil, :required => true, :class => 'form-control') %>
    </div>
  </div>
  <div class="col-lg-offset-2 col-lg-10">
    <%= submit_tag 'Log in', :class => 'btn btn-primary'%>
  </div>
<% end %>