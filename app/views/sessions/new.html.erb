<% if flash[:error].present? %>
  <%= flash[:error] %>
<% end %>

<h1>Login</h1>
<%= form_tag login_path, :method => :post do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag(:email, nil, :required => true) %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag(:password, nil, :required => true) %>
  </p>
  <%= submit_tag 'Log in'%>
<% end %>