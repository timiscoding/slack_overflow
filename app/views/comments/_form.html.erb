<% if @comment.errors.present? && @comment.errors.any? %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h3>
    </div>
    <div class="panel-body">
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= form_for [@post, @comment], :html => { :class => "form-horizontal post" } do |f| %>
  <div class="form-group">
    <%= f.label :content_md, :Content,  :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
    <%= f.text_area :content_md, :required => true, :class => 'form-control', :rows => 15  %>
    </div>
    <div class="col-lg-5" id="preview" style="overflow:scroll"><%== @comment.content_html %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
       <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>