<h1>All posts</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>Created</th>
    <th>Updated</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to(post.topic, post) %>
      </td>
      <td>
        <%= post.created_at.strftime('%a %e %b %Y') %>
      </td>
      <td>
        <%= post.updated_at.strftime('%H:%M:%S %a %e %b %Y') %>
      </td>
    </tr>
  <% end %>
</table>