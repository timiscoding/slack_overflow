<% if @errors.present? && @errors.any? %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :topic %>
    <%= f.text_field :topic, :required => true %>
  </p>
  <p>
    <%= f.label :content_md, :Content %>
    <%= f.text_area :content_md, :required => true, :size => '50x20' %>
  </p>
  <%= f.submit %>
<% end %>

<div id="preview" style="display: inline-block; border: 1px solid black; width: 400px; height: 600px; vertical-align: top; overflow:scroll"><%== @post.content_html %></div>