<%- model_class = User -%>
<div class="page-header">
  <h1>User Profile</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @user.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @user.role %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course) %>:</strong></dt>
  <dd><%= @user.course %></dd>
  <dt><strong>Joined:</strong></dt>
  <dd><%= @user.created_at %></dd>
  <dt><strong>Updated:</strong></dt>
  <dd><%= @user.updated_at %></dd>
</dl>

<%= link_to 'Back',
              users_path, :class => 'btn btn-default'  %>
<%= link_to 'Edit',
              edit_user_path(@user), :class => 'btn btn-default' %>
<% if @current_user.present? && @current_user.admin? %>
  <%= link_to 'Delete',
                user_path(@user),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>