<% if @errors.present? && @errors.any? %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </p>
  <p>
    <%= f.label :role, 'Account type' %>
    <%= f.select :role, User.roles.map { |key, value| [key.capitalize, key] }, :selected => User.roles[@user.role] %>
  </p>
  <p>
    <%= f.label :course %>
    <%= f.text_field :course %>
  </p>
  <%= f.submit 'Create account' %>
<% end %>